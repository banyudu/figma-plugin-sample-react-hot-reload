{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  }
}
